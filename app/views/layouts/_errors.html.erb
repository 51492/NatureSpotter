<% if obj.errors.any? %>
  <div class="alert alert-danger">
    <div id="error_explanation">
      <h5>フォームの<%= pluralize(obj.errors.count, "箇所にエラーがあります。下記ご確認ください。") %></h5>
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>  
<% end %>