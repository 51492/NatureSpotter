<div class="row">
  <div class="col-12 col-md-8 mx-auto py-5">
    <h1>User情報編集</h1>
      <%= render 'layouts/errors', obj: @user %>

      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group my-5">
          <h4>プロフィール画像</h4>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>

        <div class="form-group my-5">
          <h4>名前</h4>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group my-5">
          <h4>email</h4>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group my-5">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
      <% end %>

  </div>
</div>

<div class="row flex-row-reverse py-5">
  <div class="col-md-3 "><%#= link_to "退会する", confirm_path, class: "btn btn-delete btn-sm" %></div>
</div>