<div class="row">
  <div class="col-12 col-md-8 mx-auto pt-4 pb-3">
    <h2 class="ch">新規投稿</h2>
    
    <% if @post.errors.any? %>
      <%= @post.errors.count %>件のエラーが発生しました
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<%= render 'users/posts/form', post: @post %>