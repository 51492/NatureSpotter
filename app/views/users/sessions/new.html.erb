<%= stylesheet_link_tag 'users/signin', media: 'all' %>

<div class="box2">
  <div class="box-inner">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

    <div class="text-center">
      <%= image_tag "header_logo", class:'logo mt-3 ml-3' %>
    </div>

    <div class="box-email mt-3">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="box-password my-3">
      <div class="a-row">
        <div class="column-left">
          <%= f.label :password, "Password" %>
        </div>
        <div class="column-right">
          <%#= link_to "パスワードを忘れた場合", new_user_password_path %>
        </div>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
    </div>

    <div class="box-login ">
      <%= f.submit "Login" %>
      <% if devise_mapping.rememberable? %>
      <div class="remember">
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember, "ログインしたままにする" %>
      </div>
      <% end %>
    </div>
    <% end %>

    <div class="box-newusr mt-5">
      <p><span>----------</span> アカウントをお持ちでないですか？ <span>----------</span></p>
      <%= link_to "Signup", new_user_registration_path %>
    </div>
  </div>
</div>