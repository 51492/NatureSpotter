<i class="fa-regular fa-comments"></i>：<%= post.comments.count %>

<% post.comments.each do |comment| %>

 <table class="table table-borderless">

    <tr>
      <td class="pb-0"><%= comment.user.name %></td>
      <td class="pb-0"><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></td>
    </tr>

    <tr>
      <td class="pb-1"><%= comment.comment %></td>
      <td class="pb-1">
        <% if comment.user == current_user || admin_signed_in? %>
          <%= link_to "削除",  post_comment_path(post_id: post.id, id: comment.id ), method: :delete, class: "btn btn-danger btn-sm", remote: true, data: {"turbolinks" => false} %>
        <% end %>
      </td>

    </tr>

  </table>

  <hr class="mt-0 mb-2">
<% end %>

