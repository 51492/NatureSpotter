<div class="row row-cols-1 row-cols-md-4 g-5">
  <% posts.each do |post| %>
    <div class="col-sm-9 offset-sm-2 col-md-3 offset-md-0">
      <div class="card mb-3 shadow">

        <%= link_to post_path(post), style: "color: black;" do %>
          <%= image_tag post.get_image(250, 250), class: "card-img-top" %>
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= link_to post.place, post_path(post), class: 'text-dark' %></h5>
          <div class="card-text"><p class="content"><i class="fa-solid fa-location-dot"></i>&nbsp;<%= post.address %></p></div>
          <div class="card-text pl-3"><p class="content"><%= post.caption %></p></div>
          <div>
            <span id="like_btn_<%= post.id %>"><%= render "users/partial_templates/like", post: post %></span>&emsp;
            <i class="fa-regular fa-comments"></i>&nbsp;<span id="comment_count"><%= render "users/partial_templates/comment_count", post: post %></span>
          </div>
          <div class="card-text"><small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></small></div>
        </div>

        </div>
    </div>
  <% end %>
</div>

<style>
  .card-title{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .content{
    margin-bottom: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>

