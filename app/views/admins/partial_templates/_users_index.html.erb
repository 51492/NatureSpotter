<div class="row">
  <div class="col-12 col-sm-10 offset-sm-1">

    <table class="table table-hover">
      <tbody>
        <% users.each do |user| %>

          <tr data-href="<%= admins_user_path(user) %>">
            <td style="width: 20%">
                <%= image_tag user.get_profile_image(100, 100), class: "rounded-circle" %>
            </td>

            <td style="width: 30%">
              <%= user.name %>
            </td>

            <!--レイアウトの乱れ防止で576ピクセル以上でのみ表示 (576ピクセル未満で非表示)-->
            <td class="d-none d-sm-block">
              <div class="d-none d-sm-block">投稿数 <%= user.posts.count %></div>
            </td>

            <td>
              <% if user.is_withdrawal %>
                <b class="text-secondary">退会</b>
              <% else %>
                <b class="text-success">入会</b>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<script>
  $(document).ready(function() {
    $('tr[data-href]').click(function (e) {
      if (!$(e.target).is('a')) {
        window.location = $(e.currentTarget).data('href');
      };
    });
  });
</script>